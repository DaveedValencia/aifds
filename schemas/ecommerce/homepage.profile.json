{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aifds.org/schemas/ecommerce/homepage.profile.json",
  "title": "AIFDS Ecommerce Homepage Profile",
  "description": "Validation schema for the canonical homepage JSON-LD payload defined by the AI Feed Discovery Standard ecommerce profile. Ensures the root page publishes a single Organization/LocalBusiness, WebSite, and WebPage graph with required trust and discovery signals.",
  "type": "object",
  "unevaluatedProperties": true,
  "required": [
    "@context",
    "@graph"
  ],
  "properties": {
    "@context": {
      "type": "string",
      "const": "https://schema.org",
      "description": "Global JSON-LD context. MUST be https://schema.org."
    },
    "@graph": {
      "type": "array",
      "description": "Homepage graph describing the authoritative organization/local business, the site container, and the root web page.",
      "minItems": 3,
      "items": {
        "$ref": "#/$defs/homepageNode"
      },
      "allOf": [
        {
          "contains": {
            "$ref": "#/$defs/organizationNode"
          },
          "minContains": 1,
          "maxContains": 1
        },
        {
          "contains": {
            "$ref": "#/$defs/websiteNode"
          },
          "minContains": 1,
          "maxContains": 1
        },
        {
          "contains": {
            "$ref": "#/$defs/webpageNode"
          },
          "minContains": 1,
          "maxContains": 1
        }
      ]
    }
  },
  "$defs": {
    "homepageNode": {
      "title": "Homepage Graph Node",
      "description": "One of Organization/LocalBusiness, WebSite, or WebPage entries defined by the AIFDS homepage requirements.",
      "oneOf": [
        {
          "$ref": "#/$defs/organizationNode"
        },
        {
          "$ref": "#/$defs/websiteNode"
        },
        {
          "$ref": "#/$defs/webpageNode"
        }
      ]
    },
    "sameDomainIdentifier": {
      "title": "Same-Domain HTTPS Identifier",
      "type": "string",
      "pattern": "^https://[^/]+(?:/[^\\s#]*)?(?:#.*)?$",
      "description": "Absolute HTTPS URL anchored to the publisher's domain. Fragments are optional."
    },
    "publisherObject": {
      "title": "Inline Publisher Object",
      "type": "object",
      "required": [
        "@type",
        "name"
      ],
      "properties": {
        "@type": {
          "type": "string",
          "enum": [
            "Organization",
            "LocalBusiness"
          ]
        },
        "name": {
          "type": "string"
        },
        "@id": {
          "allOf": [
            {
              "$ref": "#/$defs/sameDomainIdentifier"
            }
          ]
        },
        "url": {
          "type": "string",
          "format": "uri",
          "pattern": "^https://[^/]+/.*$"
        }
      },
      "unevaluatedProperties": true
    },
    "websiteReference": {
      "title": "Inline WebSite Reference",
      "type": "object",
      "required": [
        "@type"
      ],
      "properties": {
        "@type": {
          "type": "string",
          "const": "WebSite"
        },
        "@id": {
          "allOf": [
            {
              "$ref": "#/$defs/sameDomainIdentifier"
            }
          ]
        },
        "url": {
          "type": "string",
          "format": "uri",
          "pattern": "^https://[^/]+/.*$"
        },
        "name": {
          "type": "string"
        }
      },
      "allOf": [
        {
          "anyOf": [
            {
              "required": [
                "@id"
              ]
            },
            {
              "required": [
                "url"
              ]
            }
          ]
        }
      ],
      "unevaluatedProperties": true
    },
    "thingObject": {
      "title": "Thing Object",
      "type": "object",
      "required": [
        "@type",
        "name"
      ],
      "properties": {
        "@type": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "@id": {
          "allOf": [
            {
              "$ref": "#/$defs/sameDomainIdentifier"
            }
          ]
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "description": {
          "type": "string"
        },
        "sameAs": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        }
      },
      "unevaluatedProperties": true
    },
    "entityReference": {
      "title": "Entity Reference",
      "oneOf": [
        {
          "$ref": "#/$defs/idReference"
        },
        {
          "$ref": "#/$defs/thingObject"
        }
      ]
    },
    "thingReference": {
      "title": "Thing Reference",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "#/$defs/idReference"
        },
        {
          "$ref": "#/$defs/thingObject"
        }
      ]
    },
    "openingHoursSpecification": {
      "title": "OpeningHoursSpecification",
      "type": "object",
      "required": [
        "@type"
      ],
      "properties": {
        "@type": {
          "type": "string",
          "const": "OpeningHoursSpecification"
        },
        "dayOfWeek": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "opens": {
          "type": "string"
        },
        "closes": {
          "type": "string"
        },
        "validFrom": {
          "type": "string",
          "format": "date"
        },
        "validThrough": {
          "type": "string",
          "format": "date"
        }
      },
      "unevaluatedProperties": true
    },
    "organizationNode": {
      "title": "Organization Node",
      "description": "Authoritative organization or local business that owns the site. When using LocalBusiness, include address, areaServed, and hoursAvailable wherever accurate.",
      "type": "object",
      "required": [
        "@type",
        "@id",
        "name",
        "url",
        "logo"
      ],
      "properties": {
        "@type": {
          "type": "string",
          "enum": [
            "Organization",
            "LocalBusiness"
          ],
          "description": "Organization class. Use LocalBusiness when the entity serves customers in person."
        },
        "@id": {
          "allOf": [
            {
              "$ref": "#/$defs/sameDomainIdentifier"
            }
          ],
          "description": "Stable node identifier that anchors the organization within the domain."
        },
        "name": {
          "type": "string",
          "description": "Brand-facing name of the organization."
        },
        "legalName": {
          "type": "string",
          "description": "Registered legal name. SHOULD be present for additional trust."
        },
        "url": {
          "type": "string",
          "format": "uri",
          "pattern": "^https://[^/]+/.*$",
          "description": "Canonical organization URL. MUST live on the same domain as the homepage."
        },
        "logo": {
          "description": "Primary logo asset. Prefer an ImageObject; plain HTTPS URL also accepted. Pair SVG sources with a raster `thumbnailUrl` or alternate image when available.",
          "oneOf": [
            {
              "$ref": "#/$defs/imageObject"
            },
            {
              "type": "string",
              "format": "uri",
              "pattern": "^https://.+$"
            }
          ]
        },
        "sameAs": {
          "type": "array",
          "description": "Authoritative third-party profiles. Aim for two or more high-trust sources.",
          "minItems": 2,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "contactPoint": {
          "type": "array",
          "description": "Contact channels with contactType and email/telephone.",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/contactPoint"
          }
        },
        "brand": {
          "description": "Brand information for the organization.",
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "object",
              "required": [
                "@type",
                "name"
              ],
              "properties": {
                "@type": {
                  "type": "string",
                  "const": "Brand"
                },
                "name": {
                  "type": "string"
                },
                "@id": {
                  "type": "string",
                  "format": "uri"
                },
                "url": {
                  "type": "string",
                  "format": "uri",
                  "pattern": "^https://.+$"
                },
                "logo": {
                  "oneOf": [
                    {
                      "$ref": "#/$defs/imageObject"
                    },
                    {
                      "type": "string",
                      "format": "uri",
                      "pattern": "^https://.+$"
                    }
                  ]
                },
                "sameAs": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "uri"
                  }
                }
              },
              "unevaluatedProperties": true
            }
          ]
        },
        "foundingDate": {
          "type": "string",
          "format": "date",
          "description": "Organization founding date (ISO-8601)."
        },
        "slogan": {
          "type": "string",
          "description": "Verified slogan or tagline."
        },
        "areaServed": {
          "description": "Geographic service coverage.",
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "knowsAbout": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Domains of expertise represented by concise, non-spammy terms."
        },
        "address": {
          "$ref": "#/$defs/postalAddress",
          "description": "Registered or mailing address when available."
        }
      },
      "unevaluatedProperties": true
    },
    "websiteNode": {
      "title": "WebSite Node",
      "description": "Container for the site and search experience metadata.",
      "type": "object",
      "required": [
        "@type",
        "@id",
        "url",
        "name",
        "publisher"
      ],
      "properties": {
        "@type": {
          "type": "string",
          "const": "WebSite"
        },
        "@id": {
          "allOf": [
            {
              "$ref": "#/$defs/sameDomainIdentifier"
            }
          ],
          "description": "Stable node identifier for the WebSite."
        },
        "url": {
          "type": "string",
          "format": "uri",
          "pattern": "^https://[^/]+/.*$",
          "description": "Canonical site URL."
        },
        "name": {
          "type": "string",
          "description": "Human-readable site name."
        },
        "alternateName": {
          "type": "string",
          "description": "Common shorthand or abbreviation."
        },
        "inLanguage": {
          "$ref": "#/$defs/language",
          "description": "BCP-47 language tag for the primary site language."
        },
        "publisher": {
          "description": "Publisher organization for the site.",
          "oneOf": [
            {
              "$ref": "#/$defs/idReference"
            },
            {
              "$ref": "#/$defs/publisherObject"
            }
          ]
        },
        "potentialAction": {
          "$ref": "#/$defs/searchAction",
          "description": "Site search action template exposing {search_term_string}. Strongly recommended."
        },
        "copyrightHolder": {
          "description": "Entity that legally owns the site content.",
          "oneOf": [
            {
              "$ref": "#/$defs/entityReference"
            },
            {
              "type": "string"
            }
          ]
        },
        "copyrightYear": {
          "description": "Copyright year associated with the site.",
          "oneOf": [
            {
              "type": "integer",
              "minimum": 1900
            },
            {
              "type": "string",
              "pattern": "^[0-9]{4}$"
            }
          ]
        }
      },
      "unevaluatedProperties": true
    },
    "webpageNode": {
      "title": "WebPage Node",
      "description": "Homepage specific metadata.",
      "type": "object",
      "required": [
        "@type",
        "@id",
        "url",
        "name",
        "description",
        "isPartOf"
      ],
      "properties": {
        "@type": {
          "type": "string",
          "const": "WebPage"
        },
        "@id": {
          "allOf": [
            {
              "$ref": "#/$defs/sameDomainIdentifier"
            }
          ],
          "description": "Stable node identifier for the homepage."
        },
        "url": {
          "type": "string",
          "format": "uri",
          "pattern": "^https://[^/]+/.*$",
          "description": "Canonical homepage URL."
        },
        "name": {
          "type": "string",
          "description": "Hero headline or page title rendered on the homepage."
        },
        "description": {
          "type": "string",
          "description": "Clear, non-promissory summary of what the site offers."
        },
        "inLanguage": {
          "$ref": "#/$defs/language",
          "description": "BCP-47 language tag for the page."
        },
        "isPartOf": {
          "description": "Reference or inline definition of the parent WebSite node.",
          "oneOf": [
            {
              "$ref": "#/$defs/idReference"
            },
            {
              "$ref": "#/$defs/websiteReference"
            }
          ]
        },
        "primaryImageOfPage": {
          "description": "Hero or representative image. Either embed or reference an ImageObject.",
          "oneOf": [
            {
              "$ref": "#/$defs/imageObject"
            },
            {
              "$ref": "#/$defs/idReference"
            }
          ]
        },
        "mainEntityOfPage": {
          "description": "Primary entity represented by the homepage. Often points to the Organization.",
          "oneOf": [
            {
              "$ref": "#/$defs/entityReference"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/entityReference"
              },
              "minItems": 1
            }
          ]
        },
        "copyrightHolder": {
          "description": "Entity responsible for homepage content.",
          "oneOf": [
            {
              "$ref": "#/$defs/entityReference"
            },
            {
              "type": "string"
            }
          ]
        },
        "copyrightYear": {
          "description": "Copyright year displayed on the homepage.",
          "oneOf": [
            {
              "type": "integer",
              "minimum": 1900
            },
            {
              "type": "string",
              "pattern": "^[0-9]{4}$"
            }
          ]
        },
        "breadcrumb": {
          "$ref": "#/$defs/breadcrumbList",
          "description": "Breadcrumb trail with at least the homepage entry."
        },
        "about": {
          "description": "Entities or topics covered by the page.",
          "oneOf": [
            {
              "$ref": "#/$defs/thingReference"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/thingReference"
              }
            }
          ]
        },
        "datePublished": {
          "description": "Date the homepage narrative first published.",
          "oneOf": [
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "string",
              "format": "date-time"
            }
          ]
        },
        "dateModified": {
          "description": "Most recent update date for the homepage.",
          "oneOf": [
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "string",
              "format": "date-time"
            }
          ]
        }
      },
      "unevaluatedProperties": true
    },
    "imageObject": {
      "title": "ImageObject",
      "type": "object",
      "required": [
        "@type",
        "url"
      ],
      "properties": {
        "@type": {
          "type": "string",
          "const": "ImageObject"
        },
        "@id": {
          "type": "string",
          "format": "uri",
          "description": "Optional identifier that allows other nodes to reference the image."
        },
        "url": {
          "type": "string",
          "format": "uri",
          "pattern": "^https://.+$",
          "description": "Absolute URL to the image asset."
        },
        "width": {
          "type": "integer",
          "minimum": 1,
          "description": "Image width in pixels. Recommended for faster rendering hints."
        },
        "height": {
          "type": "integer",
          "minimum": 1,
          "description": "Image height in pixels. Recommended for faster rendering hints."
        },
        "caption": {
          "type": "string"
        },
        "thumbnailUrl": {
          "type": "string",
          "format": "uri",
          "pattern": "^https://.+$"
        }
      },
      "unevaluatedProperties": true
    },
    "postalAddress": {
      "title": "PostalAddress",
      "type": "object",
      "required": [
        "@type"
      ],
      "properties": {
        "@type": {
          "type": "string",
          "const": "PostalAddress"
        },
        "streetAddress": {
          "type": "string"
        },
        "addressLocality": {
          "type": "string"
        },
        "addressRegion": {
          "type": "string"
        },
        "postalCode": {
          "type": "string"
        },
        "addressCountry": {
          "type": "string"
        }
      },
      "unevaluatedProperties": true
    },
    "contactPoint": {
      "title": "ContactPoint",
      "type": "object",
      "required": [
        "@type",
        "contactType"
      ],
      "properties": {
        "@type": {
          "type": "string",
          "const": "ContactPoint"
        },
        "contactType": {
          "type": "string",
          "description": "Purpose of the contact channel (e.g., customer support, partnerships)."
        },
        "telephone": {
          "type": "string",
          "description": "Telephone number with country code."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Contact email address."
        },
        "areaServed": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "availableLanguage": {
          "description": "Languages supported on the contact channel.",
          "oneOf": [
            {
              "$ref": "#/$defs/language"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/language"
              }
            }
          ]
        },
        "contactOption": {
          "description": "Qualifiers such as TollFree or HearingImpairedSupported.",
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "hoursAvailable": {
          "description": "Structured availability windows for the contact channel.",
          "oneOf": [
            {
              "$ref": "#/$defs/openingHoursSpecification"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/openingHoursSpecification"
              },
              "minItems": 1
            }
          ]
        }
      },
      "allOf": [
        {
          "anyOf": [
            {
              "required": [
                "telephone"
              ]
            },
            {
              "required": [
                "email"
              ]
            }
          ]
        }
      ],
      "unevaluatedProperties": true
    },
    "searchAction": {
      "title": "SearchAction",
      "type": "object",
      "required": [
        "@type",
        "target",
        "query-input"
      ],
      "properties": {
        "@type": {
          "type": "string",
          "const": "SearchAction"
        },
        "target": {
          "type": "string",
          "format": "uri-template",
          "pattern": "\\{search_term_string\\}",
          "description": "Search URL template that MUST contain {search_term_string}."
        },
        "query-input": {
          "type": "string",
          "const": "required name=search_term_string",
          "description": "Specifies the required query string variable."
        }
      },
      "additionalProperties": false
    },
    "idReference": {
      "title": "JSON-LD ID Reference",
      "type": "object",
      "required": [
        "@id"
      ],
      "properties": {
        "@id": {
          "allOf": [
            {
              "$ref": "#/$defs/sameDomainIdentifier"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "breadcrumbList": {
      "title": "BreadcrumbList",
      "type": "object",
      "required": [
        "@type",
        "itemListElement"
      ],
      "properties": {
        "@type": {
          "type": "string",
          "const": "BreadcrumbList"
        },
        "itemListElement": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/listItem"
          }
        }
      },
      "additionalProperties": false
    },
    "listItem": {
      "title": "Breadcrumb ListItem",
      "type": "object",
      "required": [
        "@type",
        "position",
        "item"
      ],
      "properties": {
        "@type": {
          "type": "string",
          "const": "ListItem"
        },
        "position": {
          "type": "integer",
          "minimum": 1
        },
        "item": {
          "type": "object",
          "required": [
            "@id",
            "name"
          ],
          "properties": {
            "@id": {
              "type": "string",
              "format": "uri"
            },
            "name": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "language": {
      "title": "Language Tag",
      "type": "string",
      "pattern": "^([A-Za-z]{2,8})(-[A-Za-z0-9]{1,8})*$",
      "format": "language",
      "description": "Primary language code in BCP-47 format (e.g., en, en-US)."
    }
  },
  "examples": [
    {
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "Organization",
          "@id": "https://aifds.org/#org",
          "name": "AI Feed Discovery Standard",
          "legalName": "AI Feed Discovery Standard",
          "url": "https://aifds.org/",
          "logo": {
            "@type": "ImageObject",
            "@id": "https://aifds.org/#logo",
            "url": "https://aifds.org/logo.svg",
            "width": 512,
            "height": 512
          },
          "sameAs": [
            "https://github.com/DaveedValencia",
            "https://x.com/DaveedValencia",
            "https://daveedvalencia.com"
          ],
          "contactPoint": [
            {
              "@type": "ContactPoint",
              "contactType": "general inquiries",
              "email": "contact@aifds.org",
              "areaServed": "Worldwide"
            }
          ],
          "brand": {
            "@type": "Brand",
            "name": "AIFDS"
          },
          "foundingDate": "2025-01-01",
          "slogan": "The open standard for AI-ready structured data.",
          "areaServed": "Worldwide",
          "knowsAbout": [
            "AI-ready structured data",
            "schema.org validation",
            "structured data governance"
          ]
        },
        {
          "@type": "WebSite",
          "@id": "https://aifds.org/#website",
          "url": "https://aifds.org/",
          "name": "AI Feed Discovery Standard",
          "alternateName": "AIFDS",
          "inLanguage": "en-US",
          "publisher": {
            "@id": "https://aifds.org/#org"
          },
          "potentialAction": {
            "@type": "SearchAction",
            "target": "https://aifds.org/search?q={search_term_string}",
            "query-input": "required name=search_term_string"
          },
          "copyrightHolder": {
            "@id": "https://aifds.org/#org"
          },
          "copyrightYear": 2025
        },
        {
          "@type": "WebPage",
          "@id": "https://aifds.org/#webpage",
          "url": "https://aifds.org/",
          "name": "The open standard for AI-ready structured data.",
          "description": "AIFDS defines how to validate, fix, and standardize schema.org so AI systems can trust your business data.",
