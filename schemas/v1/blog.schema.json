{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aifds.org/schemas/v1/blog.schema.json",
  "title": "AIFDS Commerce Blog (v1 draft)",
  "description": "Structured blog feed aligned with schema.org/Blog and BlogPosting.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "@context": { "const": "https://schema.org" },
    "@type": { "const": "Blog" },
    "@id": {
      "description": "Canonical URL for the blog homepage.",
      "type": "string",
      "format": "uri"
    },
    "name": { "type": "string", "minLength": 1 },
    "headline": { "type": "string" },
    "description": { "type": "string", "minLength": 1 },
    "url": { "type": "string", "format": "uri" },
    "inLanguage": {
      "type": "string",
      "pattern": "^[A-Za-z]{2,3}(-[A-Za-z0-9]{2,8})*$"
    },
    "publisher": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "@type": { "enum": ["Organization", "Person"] },
        "name": { "type": "string", "minLength": 1 },
        "url": { "type": "string", "format": "uri" },
        "logo": { "type": "string", "format": "uri" }
      },
      "required": ["@type", "name"]
    },
    "blogPost": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "@type": { "const": "BlogPosting" },
          "@id": {
            "description": "Stable URL for the blog post.",
            "type": "string",
            "format": "uri"
          },
          "headline": { "type": "string", "minLength": 1 },
          "alternativeHeadline": { "type": "string" },
          "description": { "type": "string", "minLength": 1 },
          "articleSection": {
            "description": "Primary category or tag for the post.",
            "type": "string"
          },
          "keywords": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 },
            "maxItems": 20,
            "uniqueItems": true
          },
          "image": {
            "oneOf": [
              { "type": "string", "format": "uri" },
              {
                "type": "array",
                "items": { "type": "string", "format": "uri" },
                "minItems": 1
              }
            ]
          },
          "author": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "@type": { "enum": ["Person", "Organization"] },
              "name": { "type": "string", "minLength": 1 },
              "url": { "type": "string", "format": "uri" }
            },
            "required": ["@type", "name"]
          },
          "editor": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "@type": { "enum": ["Person", "Organization"] },
              "name": { "type": "string", "minLength": 1 }
            },
            "required": ["@type", "name"]
          },
          "datePublished": { "type": "string", "format": "date-time" },
          "dateModified": { "type": "string", "format": "date-time" },
          "wordCount": { "type": "integer", "minimum": 0 },
          "commentCount": { "type": "integer", "minimum": 0 },
          "url": { "type": "string", "format": "uri" },
          "mainEntityOfPage": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "@type": { "const": "WebPage" },
              "@id": { "type": "string", "format": "uri" }
            },
            "required": ["@type", "@id"]
          },
          "isAccessibleForFree": { "type": "boolean" },
          "speakable": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "@type": { "const": "SpeakableSpecification" },
              "xpath": {
                "type": "array",
                "items": { "type": "string", "minLength": 1 },
                "maxItems": 10
              }
            },
            "required": ["@type", "xpath"]
          },
          "mentions": {
            "description": "Referenced products or services.",
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "@type": { "type": "string" },
                "@id": { "type": "string", "minLength": 1 },
                "name": { "type": "string" },
                "url": { "type": "string", "format": "uri" }
              },
              "required": ["@id"]
            },
            "maxItems": 15
          }
        },
        "required": [
          "@type",
          "@id",
          "headline",
          "description",
          "author",
          "datePublished",
          "url"
        ]
      },
      "maxItems": 100
    },
    "lastModified": {
      "description": "Timestamp the blog payload was last regenerated.",
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["@context", "@type", "name", "description", "url", "blogPost", "lastModified"]
}
