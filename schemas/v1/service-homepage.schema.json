{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aifds.org/schemas/v1/service-homepage.schema.json",
  "title": "AIFDS Service Homepage (v1 draft)",
  "description": "Structured representation of a service business landing page aligned with schema.org/WebPage.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "@context": { "const": "https://schema.org" },
    "@type": { "const": "WebPage" },
    "@id": {
      "description": "Canonical URL for the service homepage.",
      "type": "string",
      "format": "uri"
    },
    "name": { "type": "string", "minLength": 1 },
    "headline": { "type": "string" },
    "description": { "type": "string", "minLength": 1 },
    "url": { "type": "string", "format": "uri" },
    "inLanguage": {
      "description": "BCP-47 language tag.",
      "type": "string",
      "pattern": "^[A-Za-z]{2,3}(-[A-Za-z0-9]{2,8})*$"
    },
    "mainEntity": {
      "description": "Primary agency or studio featured on the page.",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "@type": { "enum": ["Organization", "ProfessionalService"] },
        "@id": { "type": "string", "format": "uri" },
        "name": { "type": "string", "minLength": 1 },
        "url": { "type": "string", "format": "uri" },
        "logo": { "type": "string", "format": "uri" }
      },
      "required": ["@type", "name"]
    },
    "tagline": { "type": "string" },
    "primaryImageOfPage": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "@type": { "const": "ImageObject" },
        "url": { "type": "string", "format": "uri" },
        "caption": { "type": "string" }
      },
      "required": ["@type", "url"]
    },
    "hasPart": {
      "description": "Structured sections on the homepage.",
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "@type": { "enum": ["WebPageElement", "CreativeWork", "WPHeader"] },
          "sectionType": {
            "description": "Preset label for downstream consumers.",
            "type": "string",
            "enum": [
              "hero",
              "services",
              "process",
              "caseStudies",
              "testimonials",
              "credentials",
              "cta",
              "faq",
              "partners"
            ]
          },
          "name": { "type": "string", "minLength": 1 },
          "headline": { "type": "string" },
          "text": { "type": "string" },
          "position": { "type": "integer", "minimum": 0 },
          "image": {
            "oneOf": [
              { "type": "string", "format": "uri" },
              {
                "type": "array",
                "items": { "type": "string", "format": "uri" },
                "minItems": 1,
                "maxItems": 8
              }
            ]
          },
          "itemListElement": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "@type": { "const": "ListItem" },
                "position": { "type": "integer", "minimum": 1 },
                "name": { "type": "string" },
                "item": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "@id": { "type": "string", "minLength": 1 },
                    "@type": { "type": "string" },
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "url": { "type": "string", "format": "uri" }
                  },
                  "required": ["@id"]
                }
              },
              "required": ["@type", "position", "item"]
            },
            "maxItems": 12
          },
          "potentialAction": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "@type": { "const": "Action" },
              "name": { "type": "string", "minLength": 1 },
              "target": { "type": "string", "format": "uri" }
            },
            "required": ["@type", "name", "target"]
          }
        },
        "required": ["@type", "sectionType", "name", "position"]
      },
      "minItems": 2,
      "maxItems": 12
    },
    "review": {
      "description": "Testimonials featured on the homepage.",
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "@type": { "const": "Review" },
          "author": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "@type": { "enum": ["Person", "Organization"] },
              "name": { "type": "string", "minLength": 1 },
              "jobTitle": { "type": "string" },
              "url": { "type": "string", "format": "uri" }
            },
            "required": ["@type", "name"]
          },
          "reviewBody": { "type": "string", "minLength": 1 },
          "publisher": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "@type": { "const": "Organization" },
              "name": { "type": "string", "minLength": 1 }
            },
            "required": ["@type", "name"]
          },
          "datePublished": { "type": "string", "format": "date" }
        },
        "required": ["@type", "author", "reviewBody"]
      },
      "maxItems": 20
    },
    "potentialAction": {
      "description": "Primary conversion action offered on the page (e.g., book consultation).",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "@type": { "const": "Action" },
        "name": { "type": "string", "minLength": 1 },
        "target": { "type": "string", "format": "uri" }
      },
      "required": ["@type", "name", "target"]
    },
    "lastModified": {
      "description": "Timestamp the service homepage payload was last regenerated.",
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["@context", "@type", "name", "description", "url", "hasPart", "lastModified"]
}
