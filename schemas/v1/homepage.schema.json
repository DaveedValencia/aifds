{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aifds.org/schemas/v1/homepage.schema.json",
  "title": "AIFDS Commerce Homepage (v1 draft)",
  "description": "Structured representation of a storefront landing page aligned with schema.org/WebPage.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "@context": { "const": "https://schema.org" },
    "@type": { "const": "WebPage" },
    "@id": {
      "description": "Canonical URL for the homepage.",
      "type": "string",
      "format": "uri"
    },
    "name": { "type": "string", "minLength": 1 },
    "alternateName": { "type": "string" },
    "description": { "type": "string", "minLength": 1 },
    "url": { "type": "string", "format": "uri" },
    "inLanguage": {
      "description": "BCP-47 language tag.",
      "type": "string",
      "pattern": "^[A-Za-z]{2,3}(-[A-Za-z0-9]{2,8})*$"
    },
    "primaryImageOfPage": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "@type": { "const": "ImageObject" },
        "url": { "type": "string", "format": "uri" },
        "width": { "type": "integer", "minimum": 1 },
        "height": { "type": "integer", "minimum": 1 },
        "caption": { "type": "string" }
      },
      "required": ["@type", "url"]
    },
    "mainEntity": {
      "description": "Primary organization or brand represented on the page.",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "@type": { "enum": ["Organization", "Brand"] },
        "@id": { "type": "string", "format": "uri" },
        "name": { "type": "string", "minLength": 1 },
        "url": { "type": "string", "format": "uri" },
        "logo": { "type": "string", "format": "uri" }
      },
      "required": ["@type", "name"]
    },
    "about": {
      "description": "Key thematic focus areas highlighted on the homepage.",
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "@type": { "const": "Thing" },
          "name": { "type": "string", "minLength": 1 },
          "description": { "type": "string" }
        },
        "required": ["@type", "name"]
      },
      "maxItems": 10
    },
    "hasPart": {
      "description": "Structured sections of the homepage.",
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "@type": {
            "enum": [
              "HeroSection",
              "WebPageElement",
              "CollectionPage",
              "OfferCatalog"
            ]
          },
          "name": { "type": "string", "minLength": 1 },
          "headline": { "type": "string" },
          "text": { "type": "string" },
          "position": { "type": "integer", "minimum": 0 },
          "url": { "type": "string", "format": "uri" },
          "image": {
            "oneOf": [
              { "type": "string", "format": "uri" },
              {
                "type": "array",
                "items": { "type": "string", "format": "uri" },
                "minItems": 1
              }
            ]
          },
          "potentialAction": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "@type": { "const": "Action" },
              "name": { "type": "string", "minLength": 1 },
              "target": { "type": "string", "format": "uri" }
            },
            "required": ["@type", "name", "target"]
          },
          "itemListElement": {
            "description": "References to featured collections or products within this section.",
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "@type": { "const": "ListItem" },
                "position": { "type": "integer", "minimum": 1 },
                "name": { "type": "string", "minLength": 1 },
                "item": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "@id": { "type": "string", "minLength": 1 },
                    "@type": { "type": "string" },
                    "name": { "type": "string" },
                    "url": { "type": "string", "format": "uri" }
                  },
                  "required": ["@id"]
                }
              },
              "required": ["@type", "position", "item"]
            },
            "maxItems": 12
          }
        },
        "required": ["@type", "name", "position"]
      },
      "maxItems": 12
    },
    "speakable": {
      "description": "Text sections suitable for voice assistants.",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "@type": { "const": "SpeakableSpecification" },
        "xpath": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "maxItems": 10
        }
      },
      "required": ["@type", "xpath"]
    },
    "potentialAction": {
      "description": "Primary conversion action (e.g., start shopping).",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "@type": { "const": "Action" },
        "name": { "type": "string", "minLength": 1 },
        "target": { "type": "string", "format": "uri" }
      },
      "required": ["@type", "name", "target"]
    },
    "lastModified": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp the homepage payload was last regenerated."
    }
  },
  "required": ["@context", "@type", "name", "description", "url", "hasPart", "lastModified"]
}
